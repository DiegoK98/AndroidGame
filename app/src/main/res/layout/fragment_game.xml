<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dadm.scaffold.counter.GameFragment">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/escenario" />

    <ImageView
        android:id="@+id/background2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/escenario" />

    <dadm.scaffold.engine.StandardGameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:layout_gravity="top|right"
        android:id="@+id/btn_play_pause"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:background="@drawable/pause" />

    <Button
        android:id="@+id/btn_finalizer"
        android:layout_width="69dp"
        android:layout_height="123dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="100dp"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:visibility="invisible"
        android:background="@null"
        android:text="END GAME"/>

    <include layout="@layout/view_joystick"/>

    <ImageView
        android:id="@+id/menu_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/pause_menu"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause"
            android:layout_gravity="center|top"
            android:fontFamily="@font/press_start_2p"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="192dp"
            android:layout_height="64dp"
            android:layout_gravity="center|top"
            android:background="@drawable/btn_negative"
            android:fontFamily="@font/press_start_2p"
            android:layout_marginTop="32dp"
            android:text="Menu"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="192dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:background="@drawable/btn_neutral2"
            android:fontFamily="@font/press_start_2p"
            android:text="REPLAY"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="96dp"
            android:layout_height="64dp"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="32dp"
            android:background="@drawable/pause_continue"
            android:textSize="22sp"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/tile000"
        android:visibility="invisible" />

    <TextView
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:id="@+id/youWin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="48dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/press_start_2p"
        android:text="YOU WIN"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="48sp"
        android:visibility="invisible"/>

    <TextView
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:id="@+id/youWin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/press_start_2p"
        android:text="YOU WIN"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:visibility="invisible"/>

</FrameLayout>